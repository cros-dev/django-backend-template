[flake8]
# Configuração do flake8
max-line-length = 88
exclude =
    .git,
    __pycache__,
    */migrations/*,
    */venv/*,
    */env/*,
    manage.py,
    */settings.py,
    */wsgi.py,
    */asgi.py
# E203: whitespace before ':'
# E501: line too long (handled by black)
# W503: line break before binary operator
# F401: imported but unused (pode ser necessário em __init__.py)
# F403: star imports (usado em tests.py para compatibilidade)
# W293: blank line contains whitespace (será corrigido pelo black)
ignore = E203,E501,W503,F401,F403,W293
max-complexity = 10
per-file-ignores =
    __init__.py:F401
    tests.py:F403
