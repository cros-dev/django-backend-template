# =========================================================
# Django
# =========================================================
SECRET_KEY=your-secret-key
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =========================================================
# Segurança (produção)
# =========================================================
SECURE_SSL_REDIRECT=False

# =========================================================
# Internacionalização (I18N)
# =========================================================
LANGUAGE_CODE=pt-br
TIME_ZONE=UTC

# =========================================================
# Banco de dados (PostgreSQL)
# Deixe VAZIO para usar SQLite automaticamente (desenvolvimento local nativo)
# Preencha se estiver usando Docker Desktop ou em ambiente de Deploy
POSTGRES_DB=
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_HOST=
POSTGRES_PORT=

# =========================================================
# JWT
# =========================================================
JWT_ACCESS_MINUTES=5
JWT_REFRESH_DAYS=1

# =========================================================
# CORS
# =========================================================
CORS_ALLOWED_ORIGINS=http://localhost:5173

# =========================================================
# Redis
# Deixe VAZIO para usar cache local (desenvolvimento local nativo)
# Preencha se estiver usando Docker Desktop ou em ambiente de Deploy
# Docker: redis://redis:6379/1
# Fora do Docker: redis://127.0.0.1:6379/1
REDIS_URL=

# =========================================================
# Superusuário (apenas desenvolvimento)
# Preencha para criar automaticamente
# =========================================================
DJANGO_SUPERUSER_USERNAME=
DJANGO_SUPERUSER_EMAIL=
DJANGO_SUPERUSER_PASSWORD=

# =========================================================
# Gunicorn
# =========================================================
GUNICORN_WORKERS=2

# =========================================================
# Docker Host Paths (Produção - OBRIGATÓRIO)
# =========================================================
# Defina os caminhos absolutos no seu servidor para os volumes.
# IMPORTANTE: Aponte para as subpastas 'static' e 'media' dentro do diretório do ambiente.
# Exemplos (Homologação):
# STATIC_ROOT_HOST=/var/www/seu-projeto/hml/static
# MEDIA_ROOT_HOST=/var/www/seu-projeto/hml/media
STATIC_ROOT_HOST=
MEDIA_ROOT_HOST=
